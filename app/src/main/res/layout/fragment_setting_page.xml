<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.homepage.setting.SettingPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/main_background">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarUser"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/kratos_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvPersonDetails"
            style="@style/onBordingTopText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Personal Details"
            app:layout_constraintTop_toBottomOf="@+id/avatarUser" />


        <TextView
            android:id="@+id/tvUserEmail"
            style="@style/featuresTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Email Address"
            app:layout_constraintTop_toBottomOf="@+id/tvPersonDetails" />

        <TextView
            android:id="@+id/etUserEmail"
            style="@style/fakeEtForUserDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ahmed@gmail.com"
            app:layout_constraintTop_toBottomOf="@+id/tvUserEmail" />


        <TextView
            android:id="@+id/tvUserPassword"
            style="@style/featuresTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:text="Password"
            app:layout_constraintTop_toBottomOf="@+id/etUserEmail" />

        <TextView
            android:id="@+id/etUserPassword"
            style="@style/fakeEtForUserDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="**********"
            app:layout_constraintTop_toBottomOf="@+id/tvUserPassword" />

        <TextView
            android:id="@+id/btnChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Change Password"
            android:textColor="@color/main_color"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="@+id/etUserPassword"
            app:layout_constraintTop_toBottomOf="@+id/etUserPassword" />


        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/btnChangePassword" />


        <TextView
            android:id="@+id/tvAddressDetails"
            style="@style/onBordingTopText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Address Details"
            app:layout_constraintTop_toBottomOf="@+id/view_1" />

        <TextView
            android:id="@+id/tvAddress"
            style="@style/featuresTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Address"
            app:layout_constraintTop_toBottomOf="@+id/tvAddressDetails" />

        <TextView
            android:id="@+id/etUserAddress"
            style="@style/fakeEtForUserDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empty"
            app:layout_constraintTop_toBottomOf="@+id/tvAddress" />


        <TextView
            android:id="@+id/tvCity"
            style="@style/featuresTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="City"
            app:layout_constraintTop_toBottomOf="@+id/etUserAddress" />

        <TextView
            android:id="@+id/etUserCity"
            style="@style/fakeEtForUserDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empty"
            app:layout_constraintTop_toBottomOf="@+id/tvCity" />

        <TextView
            android:id="@+id/tvCountry"
            style="@style/featuresTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Country"
            app:layout_constraintTop_toBottomOf="@+id/etUserCity" />

        <TextView
            android:id="@+id/etUserCountry"
            style="@style/fakeEtForUserDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empty"
            app:layout_constraintTop_toBottomOf="@+id/tvCountry" />

        <Space
            android:id="@+id/spacer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etUserCountry" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>